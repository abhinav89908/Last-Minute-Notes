<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In and Sign Up Form</title>
    <link rel="stylesheet" href="css/register.css">
    <script src="https://kit.fontawesome.com/44841e6268.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
    <script src="sript/validation.js"></script>
</head>
<body>
    {{!-- {{>navbar}} --}}
    <div class="container">
        <div class="form-box">
            <h1 id="title">Sign Up</h1>
            <div id = "signUpForm">
                <span class="formerror">{{formError}}</span><br>
                <form action="/register" name="Rform" onsubmit="return validateForm()" method="POST">
                    <div class="input-group">
                        <div class="input-field" id="Rname">
                            <i class="fa-solid fa-user"></i>
                            <input type="text" placeholder="Name" name="firstName"><br>
                        </div>
                            <span class="formerror">{{nameError}}</span><br>
                           
                        <div class="input-field" id="Remail">
                            <i class="fa-solid fa-envelope"></i>
                            <input type="email" placeholder="Email" name="email"><br>
                        </div>
                            <span class="formerror">{{emailError}}</span><br>

                        <div class="input-field" id="Rnum">
                            <i class="fa-solid fa-phone"></i>
                            <input type="number"  placeholder="Phone Number" name="phone"><br>
                        </div>
                            <span class="formerror" >{{phoneError}}</span><br>
                        
                        <div class="input-field" id="Rpass">
                            <i class="fa-solid fa-lock"></i>
                            <input type="password" placeholder="Password" name="password"><br>
                        </div>
                            <span class="formerror">{{passError}}</span> <br>

                        <div class="input-field" id="Rcpass">
                            <i class="fa-solid fa-lock"></i>
                            <input type="password" placeholder="Confirm Password" name="cpassword">
                        </div>
                            <span class="formerror">{{passError}}</span>
                        
                    </div>
                    <div class="btn-field">
                        <button type="submit" value="Register">Sign Up</button>
                        <button type="button" id="signinbtn" class="disable">Sign In</button>
                    </div>
                </form>

            </div>
            <div id="signInForm">
                <span class="formerror">{{LoginError}}</span> <br>
                <form action="/login" method="POST">
                    <div class="input-group">
                        <div class="input-field" id="Lname">
                            <i class="fa-solid fa-envelope"></i>
                            <input type="email" placeholder="Email" name="email">
                        </div>
                        <br>
                        
                        <div class="input-field">
                            <i class="fa-solid fa-lock"></i>
                            <input type="password" placeholder="Password" name="password">
                        </div>
                        <br>
                        <p>Lost password <a href="#">Click Here!</a></p>                
                    </div>
                    <div class="btn-field">
                        <button type="button" id="signupbtn" class="disable">Sign Up</button>
                        <button type="submit" value="Register">Sign In</button>
                    </div>
                </form>

            </div>
        </div>

    </div>

    <script>
        let signupbtn = document.getElementById("signupbtn");
        let signinbtn = document.getElementById("signinbtn");

        let title = document.getElementById("title");
        

        signinbtn.onclick = function(){
            //nameField.style.maxHeight = '0';
            title.innerHTML = "Sign In";
            signUpForm.style.display = "none";
            signInForm.style.display = "block";
        }

        signupbtn.onclick = function(){
            //nameField.style.maxHeight = '65px';
            title.innerHTML = "Sign Up";
            signInForm.style.display = "none";
            signUpForm.style.display = "block";            
        }



    </script>
    
</body>
</html>