</head>

<body>

    <!-- >>>Change the header bg and add the gif remove the text -->
    <header>
        {{!-- <div class="banner"> </div> --}}

        <!-- Navigation Bar -->
        <div>
            <nav class="navbar">
                <!-- >>>Change Home with the logo -->
                <a href="/">
                    <img class="logo" src="./Images/logoLMN.png" alt="logo last minute notes">
                </a>
                <a class="menu-btn" href="/about">About</a>
                <a class="menu-btn" href="/studyMaterial">Study Material</a>
                <a class="menu-btn" href="/practice">Practice</a>
                <a class="menu-btn" href="/uploads">Uploads</a>
                <a class="menu-btn " href="/uploads">{{username}}</a>
                
                {{!-- <span id="usernamefield"></span> --}}
                <div id="usernamefield"></div>
                <a class="menu-btn flex-align-left" href="/register" id="register">Login/SignUp</a>
            </nav>

        </div>
        <div class="banner"> </div>

    </header>

    <main>
        <br><br>
        <h1 align="center" >Upload Your Files here!</h1>
        <section>
            <form action="/upload" method="post">

                <p><h4>Your Name: </h4></p>
                <input type="text" placeholder="Name" name="firstName2">
                <p><h4>Your Email: </h4></p>
                <input type="email" placeholder="Email" name="email2">
                <p><h4>Course: </h4></p>
                <input type="text" placeholder="Course" name="course">
                <p><h4>Year: </h4></p>
                <input type="text" placeholder="Year(in number)" name="year">
                <p><h4>Subject: </h4></p>
                <input type="text" placeholder="Subject" name="subject">
                <p><h4>File Link: </h4></p>
                <input type="text" placeholder="File Link" name="fileLink">
                <br><br>
                <input type="submit" name="submit" >
            </form>

        </section>

        
    </main>

    {{>footer}}
    <!-- Flickity JS files -->
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
